<% include ../header %>
<header class="row-fluid text-center">
	<h1>GPJ Caxias-MA</h1>
	<h4>Bem-vindo!</h4>
</header>
<section>
<div class="row">
<div class="col-md-offset-4 col-md-4">
<div class="well bs-component">
	<form class="form-horizontal" action="/entrar" method="post">
		<legend>Entre com Login e Senha</legend>
		<div class="form-group">
			<label for="login" class="col-lg-1 control-label">Login</label>
			<div class="col-lg-11">
				<input class="form-control" id="login" 
					type="text" name="unidade[login]" 
					placeholder="Login">
			</div>
		</div>
		<div class="form-group">
			<label for="senha" class="col-lg-1 control-label">Senha</label>
			<div class="col-lg-11">
				<input class="form-control" id="senha" 
					type="password" name="unidade[senha]" 
					placeholder="Senha">
			</div>
		</div>
		<div class="form-group">
      		<div class="col-lg-10 col-lg-offset-1">
				<button class="btn btn-primary" type="submit">
					Entrar
				</button>
			</div>
		</div>
	</form>
</div>
</div>
</div>
</section>
<% include ../footer %>